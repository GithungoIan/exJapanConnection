extends base
block content
  section.search-vehicle
    .container
      .search-vehicle-form.card
        h2 Search for your vehicle
        form.grid
          .form-control
            label.hidden(for='make')
            select#make(name='make')
              option(value='') All Makes
              option(value='mazda') Mazda
              option(value='Toyota') Toyota
              option(value='Nissan') Nissan
              option(value='BMW') BMW
              option(value='Ford') Ford
              option(value='Volkswagen') Volkswagen
          .form-control
            label.hidden(for='model')
            select#model(name='model')
              option(value='') All Models
          .form-control
            label.hidden(for='minPrice')
            select#minPrice(name='minPrice')
              option(value='') minPrice
              option(value='300000') 300000
              option(value='400000') 400000
              option(value='500000') 500000
              option(value='600000') 600000
              option(value='700000') 700000
              option(value='800000') 800000
              option(value='900000') 900000
              option(value='1000000') 1000000
              option(value='1100000') 1100000
          .form-control
            label.hidden(for='maxPrice')
            select#maxPrice(name='maxPrice')
              option(value='') maxPrice
              option(value='300000') 300000
              option(value='400000') 400000
              option(value='500000') 500000
              option(value='600000') 600000
              option(value='700000') 700000
              option(value='800000') 800000
              option(value='900000') 900000
              option(value='1000000') 1000000
              option(value='1100000') 1100000
          input.btn.btn-primary(type='submit' value='Search')

  section.featured-vehicle.my-2
    h3.lg.text-center.my-1
      | Featured Vehicles
    .container
      .grid.grid-4.text-center.my-1
        each vehicle in featuredVehicles
          .vehicle-card
            a(href=`/vehicle/${vehicle.slug}`)
              img(src=`images/vehicles/${vehicle.imageCover}` alt='')
              .grid-info
                .featured-name
                  h4= `${vehicle.overview.year} ${vehicle.make} ${vehicle.model}`
                .featured-price
                  span= `KSH ${vehicle.price}`
                .featured-mileage
                  span= `Mileage: ${vehicle.overview.mileage}`
                .featured-year.sm
                  span= `Year: ${vehicle.overview.year}`
    h3.text-center
      span
        a.text-primary.featured-see--more(href='/overview') see all cars

  section.services
    .container
      h2.md.text-center.my-1
        | Services Offered
      .grid.grid-3.text-center.my-4
        div
          i.fas.ta-server.fa-3x
          p We have quality and asured vehicles 
        div
          i.fas.ta-server.fa-3x
          p Streamlined vehicle importation process
        div
          i.fas.ta-server.fa-3x
          p Vehicle inspection and quality assuarance 

  section.brands
    h2.md.text-center.my-2
      | Popular Brands
    .container.flex
      .card
        h4 BMW
        img(src='images/logos/bmw.png' alt='')
      .card
        h4 Lexus
        img(src='images/logos/lexus.png' alt='')
      .card
        h4 Mazda
        img(src='images/logos/mazda.png' alt='')
      .card
        h4 Mitsubishi
        img(src='images/logos/mitsubishi.png' alt='')
      .card
        h4 Toyota
        img(src='images/logos/toyota.png' alt='')
      .card
        h4 Volkswagen
        img(src='images/logos/volkswagen.png' alt='')
    h3.text-center.m-1
      span
        a.text-primary.featured-see--more(href='/brands') see all brands                 
